{
	"name": "backend",
	"version": "1.0.0",
	"description": "RESTful API backend for the CESIZEN project. Built with Express.js and Node.js, featuring MongoDB database integration, authentication middleware, and comprehensive endpoints to support all frontend operations.",
	"main": "server.ts",
	"scripts": {
		"start": "node --no-warnings --loader=../aliases.mjs node_modules/ts-node/dist/bin.js -r tsconfig-paths/register api/src/server.ts",
		"dev": "nodemon --exec \"node --no-warnings --loader=../aliases.mjs node_modules/ts-node/dist/bin.js -r tsconfig-paths/register api/src/server.ts\"",
		"test": "cross-env NODE_ENV=test jest",
		"lint": "eslint ./**/*.ts",
		"lint:fix": "eslint . --ext .ts --fix",
		"format": "prettier --write ."
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Elyrria/CESIZen.git"
	},
	"keywords": [
		"api",
		"backend",
		"express",
		"mongodb",
		"node",
		"cesizen",
		"rest",
		"authentication"
	],
	"author": "Elyrria",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/Elyrria/CESIZen/issues"
	},
	"homepage": "https://github.com/Elyrria/CESIZen#readme",
	"type": "module",
	"dependencies": {
		"bcrypt": "^5.1.1",
		"dotenv": "^16.5.0",
		"express": "^5.1.0",
		"jsonwebtoken": "^9.0.2",
		"mongoose": "^8.13.2",
		"morgan": "^1.10.0"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.2",
		"@types/express": "^5.0.1",
		"@types/jsonwebtoken": "^9.0.9",
		"@types/mongoose": "^5.11.96",
		"@types/morgan": "^1.9.9",
		"@types/node": "^22.14.1",
		"@typescript-eslint/eslint-plugin": "^8.30.1",
		"@typescript-eslint/parser": "^8.30.1",
		"eslint": "^9.25.0",
		"eslint-config-prettier": "^10.1.2",
		"eslint-plugin-prettier": "^5.2.6",
		"nodemon": "^3.1.9",
		"prettier": "^3.5.3",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.8.3"
	}
}