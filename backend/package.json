{
	"name": "backend",
	"version": "1.0.0",
	"description": "RESTful API backend for the CESIZEN project. Built with Express.js and Node.js, featuring MongoDB database integration, authentication middleware, and comprehensive endpoints to support all frontend operations.",
	"main": "server.ts",
	"scripts": {
		"start": "node --no-warnings --loader=../aliases.mjs node_modules/ts-node/dist/bin.js -r tsconfig-paths/register api/src/index.ts",
		"dev": "nodemon --exec \"node --no-warnings --loader=../aliases.mjs node_modules/ts-node/dist/bin.js -r tsconfig-paths/register api/src/index.ts\"",
		"test": "cross-env NODE_ENV=test jest --config=jest.config.js",
		"lint": "eslint ./**/*.ts",
		"lint:fix": "eslint . --ext .ts --fix",
		"format": "prettier --write ."
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Elyrria/CESIZen.git"
	},
	"keywords": [
		"api",
		"backend",
		"express",
		"mongodb",
		"node",
		"cesizen",
		"rest",
		"authentication"
	],
	"author": "Elyrria",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/Elyrria/CESIZen/issues"
	},
	"homepage": "https://github.com/Elyrria/CESIZen#readme",
	"type": "module",
	"dependencies": {
		"bcrypt": "^5.1.1",
		"dotenv": "^16.5.0",
		"express": "^5.1.0",
		"express-rate-limit": "^7.5.0",
		"express-validator": "^7.2.1",
		"helmet": "^8.1.0",
		"hpp": "^0.2.3",
		"jsonwebtoken": "^9.0.2",
		"moment": "^2.30.1",
		"mongo-sanitize": "^1.1.0",
		"mongoose": "^8.13.2",
		"morgan": "^1.10.0",
		"swagger-jsdoc": "^6.2.8",
		"swagger-ui-express": "^5.0.1",
		"winston": "^3.17.0",
		"xss": "^1.0.15"
	},
	"devDependencies": {
		"@jest/types": "^29.6.3",
